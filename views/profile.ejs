<%- include('partials/header') %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" class="hidden" action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdetail flex flex-col items-center mt-10">
        <div class="relative">
            <span id="uploadicon" class="w-5 h-5 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200 cursor-pointer">
                <i class="ri-pencil-line text-zinc-800"></i>
            </span>
            <div class="w-20 h-20 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-lg font-semibold">Rehan Fazal</h1>
        <h3 class="text-md">@username</h3>
        <a href="/edit" class="px-5 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <button class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5">Add New Post</button>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/1200x/41/c6/6d/41c66d1226f94519c19d05efdbb92a82.jpg" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
    </div>
</div>

<script>
    document.querySelector("#uploadicon").addEventListener("click", function () {
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function () {
        document.querySelector("#uploadform").submit();
    })
</script>

<%- include('partials/footer') %>